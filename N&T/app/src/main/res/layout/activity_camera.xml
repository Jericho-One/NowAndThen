<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_camera_horizontal_margin"
    android:paddingRight="@dimen/activity_camera_horizontal_margin"
    android:paddingTop="@dimen/activity_camera_vertical_margin"
    android:paddingBottom="@dimen/activity_camera_vertical_margin" tools:context="amaturehour.nt.CustomCamera"
    android:background="#000"
    android:orientation="vertical">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/overlay_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/button_capture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/overlay_image"
        android:layout_marginBottom="7dp"
        android:background="@drawable/camerabutton"
        android:onClick="captureImage"/>

    <SeekBar
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/overlay_image"
        android:layout_toLeftOf="@id/button_capture"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"/>

    <SeekBar
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/overlay_image"
        android:layout_toRightOf="@id/button_capture"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"/>

</RelativeLayout>
